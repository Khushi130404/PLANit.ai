<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ai_chatbot_main_constraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustResize"
    tools:context=".ActivityChat">

        <androidx.cardview.widget.CardView
            android:id="@+id/ai_chatbot_top_card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardElevation="0dp"
            android:backgroundTint="#ffffff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ai_chatbot_back_btn"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_chatbot_top_image_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="360dp"
                    android:layout_margin="10dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:foregroundGravity="center"
                    app:layout_constraintStart_toEndOf="@id/ai_chatbot_back_btn">
                    <ImageView
                        android:id="@+id/ai_chatbot_top_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/aiiiii"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/ai_chatbot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="Planit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ai_chatbot_top_image_card"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ai_chatbot_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ai_chatbot_top_card"
        app:layout_constraintBottom_toTopOf="@id/loadingWavy"
        android:clipToPadding="false"
        android:paddingBottom="5dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ai_chatbot_bottomcard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardCornerRadius="60dp"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ai_chatbot_send_card"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ai_chatbot_edittext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="#00000000"
                android:hint="Message..."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/ai_chatbot_send_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="60dp"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true"
        android:foregroundGravity="center"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ai_chatbot_typing_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:cardCornerRadius="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/ai_chatbot_bottomcard"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/individual_chat_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/aiiiii"/>
    </androidx.cardview.widget.CardView>

    <com.razzaghimahdi78.dotsloading.linear.LoadingWavy
        android:id="@+id/loadingWavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dots_count="3"
        app:dots_duration="500"
        app:dots_size="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintStart_toEndOf="@id/ai_chatbot_typing_image"
        app:layout_constraintBottom_toTopOf="@id/ai_chatbot_bottomcard"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/planview_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ai_chatbot_bottomcard"/>


</androidx.constraintlayout.widget.ConstraintLayout>

