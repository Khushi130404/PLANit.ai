<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="360dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    android:textSize="10dp"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/indi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000inr"
            android:textSize="35dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/indi_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRST TEXT"
            android:textSize="15dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="@id/indi_price"
            app:layout_constraintBottom_toTopOf="@id/indi_price"/>
        <TextView
            android:id="@+id/indi_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRST TEXT"
            android:textSize="15dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="@id/indi_price"
            app:layout_constraintBottom_toTopOf="@id/indi_text1"/>
        <TextView
            android:id="@+id/indi_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRST TEXT"
            android:textSize="15dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="@id/indi_price"
            app:layout_constraintBottom_toTopOf="@id/indi_text2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/indi_choosebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Choose"
            app:icon="@drawable/check_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/indi_price"
            app:layout_constraintBottom_toBottomOf="@+id/indi_price"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>