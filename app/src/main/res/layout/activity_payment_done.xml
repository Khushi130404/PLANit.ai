<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="8.8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentDoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.8"
        android:weightSum="8"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="0sp"
            android:layout_marginLeft="20sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12sp"
            android:src="@drawable/cancel_button"
            />

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="Payment Confirmation"
            android:paddingLeft="10sp"
            android:gravity="center|start"
            android:textStyle="bold"
            android:textSize="23sp"
            />
    </LinearLayout>
    <View
        android:background="#DDE6ED"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:weightSum="3"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:src="@drawable/success_mark"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:text="Payment Successful"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4"
        android:weightSum="3"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btHome"
            android:layout_marginTop="90sp"
            android:layout_marginLeft="55sp"
            android:layout_marginRight="55sp"
            android:layout_marginBottom="60sp"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:text="Back To Home Page"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="#87a9c4"
            android:background="@drawable/cancel_button_radius"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>