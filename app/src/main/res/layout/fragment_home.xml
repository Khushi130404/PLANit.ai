<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <LinearLayout
        android:weightSum="9"
        android:padding="20sp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:padding="10sp"
            android:gravity="start|center"
            android:text="What do you wanna plan ?"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            ></TextView>

        <LinearLayout
            android:id="@+id/etPlan"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:background="@drawable/edittext_box"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_weight="3"
            >
            <EditText
                android:padding="20sp"
                android:hint="Plan anything..."
                android:gravity="start"
                android:editable="false"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="4"
                >
            </EditText>

            <ImageView
                android:src="@drawable/right"
                android:layout_gravity="end"
                android:padding="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="50sp"
                android:layout_height="0sp"
                android:layout_weight="1"
                ></ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:padding="10sp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="5"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                app:cardCornerRadius="20sp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginRight="20sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:src="@drawable/home_image_1"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></ImageView>

                <FrameLayout
                    android:background="@drawable/h1_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </FrameLayout>


                <TextView
                    android:textColor="@color/white"
                    android:gravity="bottom|center"
                    android:paddingBottom="20sp"
                    android:text="Plan a Wedding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0sp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    app:cardCornerRadius="20sp"
                    android:background="@drawable/home_image_box"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:src="@drawable/img"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></ImageView>

                    <FrameLayout
                        android:background="@drawable/h1_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </FrameLayout>


                    <TextView
                        android:textColor="@color/white"
                        android:gravity="bottom|center"
                        android:paddingBottom="10sp"
                        android:text="Plan a Concert"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:background="@drawable/home_image_box"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginTop="10sp"
                    app:cardCornerRadius="20sp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:src="@drawable/home_image_2"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_image_box"
                        ></ImageView>

                    <FrameLayout
                        android:background="@drawable/h1_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </FrameLayout>


                    <TextView
                        android:textColor="@color/white"
                        android:gravity="bottom|center"
                        android:paddingBottom="10sp"
                        android:text="Plan a Birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>